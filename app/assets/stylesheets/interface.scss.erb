@import "helpers";

*{ margin: 0px; }

a{
	color: black;

	&:visited{color:black;}
}
html,body {
	margin: 0;
	padding: 0;
}

body{
	background-image: url('<%= image_path('fundo.png') %>') ;
}

$menu: 200px;
$header: 10px;

.tres_pontinhos{
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
}

div#conteudo{
	background-image: url('<%= image_path('fundo branco.png') %>') ;
	min-height: 285px;
	margin: $header 10px 0 $menu;
	padding: 5px 5px 15px 15px;
	border: 1px solid #999;
	@include borda_redonda(5px);
	@include sombra(0px 0px 15px black);

	h1{
		color: #BF304F;
		font-size: 32px;
		text-shadow: rgba(0, 0, 0, 0.2) 0px -1px 2px, white 0px 1px 0px;
		margin: 10px 5px 10px 0px;
	}
}

div#menu{
	position: absolute;
	top: $header+5px; left:0px;
	width: $menu;
	z-index: 100;
	text-align: right;
	color: #90969D;
	
	a{ 
		display: block;
		color: #90969D;
		text-decoration: none;
		text-shadow: 0px -1px 1px black;
	}
	
	.item_menu{
		padding: 5px 15px 5px 10px;
		&:hover a{ color: #CFCFCF; }
	}

	.item_menu_ativo{
		@include fundo_gradiente(#3D1C22, #291113);
		border-top: 1px solid rgba(0, 0, 0, 0.2);
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);

		a{ color: white; }
	}

	div#usuario_logado{
		font-size: 16pt;
		text-align: center;
		padding: 9px 0px 7px 0px;
		
		border-top: 1px solid rgba(0,0,0,0.3);
		border-bottom: 1px solid rgba(255,255,255,0.1);
		@include sombra(0px 1px 3px black inset);
		background-color: rgba(49,49,49,0.6);
		
		a{ color: white; }
	}
	
	div#produto_escolhido{
		font-size: 16pt;
		text-align: right;
		padding: 9px 15px 7px 0px;
		
		a{ padding: 5px 0 10px 0; }
		
		&:hover a{ color: #CFCFCF; }
	}
	
	hr{
		border: 1px solid rgba(255,255,255,0.1);
	}
}

.explicacao {
	color: grey;
}